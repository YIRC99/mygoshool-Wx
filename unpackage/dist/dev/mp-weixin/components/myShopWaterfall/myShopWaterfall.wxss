.mymore {
  -webkit-tap-highlight-color: transparent;
  z-index: 999;
  -webkit-user-select: none;
          user-select: none;
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx;
  border-radius: 10rpx;
  background-color: rgba(248, 248, 248, 0.6);
}
.mymore image {
  width: 100%;
  height: 100%;
}
.waterfall-item {
  position: relative;
  overflow: hidden;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: white;
  background: #ebe6e6;
  box-shadow: 5rpx 5rpx 10rpx #bab6b6, -5rpx -5rpx 10rpx #ffffff;
}
.waterfall-item .waterfall-item__image {
  padding-bottom: 10rpx;
  background-color: #fff;
}
.waterfall-item__ft {
  padding: 20rpx;
  padding-top: 0;
  background: #fff;
}
.waterfall-item__ft__title {
  margin-bottom: 10rpx;
  line-height: 48rpx;
  font-weight: 700;
}
.waterfall-item__ft__title .value {
  font-size: 32rpx;
  color: #303133;
}
.waterfall-item__ft__desc .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #F26666;
}
.waterfall-item__ft__btn {
  padding: 10px 0;
}

