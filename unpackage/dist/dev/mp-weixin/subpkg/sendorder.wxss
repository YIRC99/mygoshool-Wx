  font-weight: 600;
}
.my-tag {
  border-radius: 10rpx 0 0 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 500rpx;
  height: 50rpx;
  z-index: 99;
  background: #86faf2;
  background: linear-gradient(90deg, #86faf2 8%, #89ffd8 49%, rgba(0, 212, 255, 0) 100%);
  display: flex;
  align-items: center;
}
.my-tag text {
  margin-left: 20rpx;
  color: #3a3a3a;
}
