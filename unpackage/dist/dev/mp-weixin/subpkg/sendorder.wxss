.appraisePopup-box {
  width: 70vw;
  height: auto;
  background-color: #ffffff;
  padding: 20rpx;
}
.appraisePopup-box .btn-grad {
  background-image: linear-gradient(to right, #77A1D3 0%, #79CBCA 51%, #77A1D3 100%);
