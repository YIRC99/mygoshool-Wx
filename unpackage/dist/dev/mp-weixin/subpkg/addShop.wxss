.page {
  height: 100vh;
}
.mychooseTimeBox {
  display: flex;
  justify-content: flex-start;
  width: 100%;
}
.mychooseTimeBox .uv-page__tag-item {
  margin: 0 10rpx;
}
.down-box {
  height: 200rpx;
}
.down-box .btn-grad {
  background-image: linear-gradient(to right, #77A1D3 0%, #79CBCA 51%, #77A1D3 100%);
  margin: 10px;
  text-align: center;
  text-transform: uppercase;
  transition: 0.5s;
  background-size: 200% auto;
  color: white;
  box-shadow: 0 0 20px #eee;
  border-radius: 10px;
  display: block;
  width: 350rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 30rpx;
  margin-bottom: 50rpx;
}
.down-box .btn-grad:hover {
  background-position: right center;
  /* change the direction of the change here */
  color: #fff;
  text-decoration: none;
}
.myitem {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: 1px solid #efefef;
  padding: 15rpx 0;
}
.myitem .left {
  font-size: 32rpx;
  font-weight: bold;
  color: black;
}
.myitem .right {
  display: flex;
  align-items: flex-end;
  color: #f73333;
  font-weight: bold;
  font-size: 30rpx;
}
.myitem .right .myinputCss {
  color: #f73333;
}
.myitem .right ._p {
  margin: 0;
  padding: 0;
  line-height: 1.4;
  /* 或者设置为具体的较小值 */
  display: inline-block;
}

